@model List<Doctor>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <a class="btn btn-primary mb-3" asp-area="Admin" asp-controller="Doctor" asp-action="Create">Create</a>
        </div>
        <hr />
        <div class="col-lg-6">
            <a class="btn btn-primary mb-3" asp-area="Admin" asp-controller="Doctor" asp-action="CreateCategory">Create Category</a>
        </div>
        <hr />
        <div class="col-lg-12 mt-3">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Image</th>
                        <th scope="col">Name</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Whatsapp</th>
                        <th scope="col">CreatedDate</th>
                        <th scope="col">Category</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 0;
                        foreach (var doctor in Model)
                        {
                            i++;
                                        <tr>
                                            <th scope="row">@i</th>
                                            <td><img src="~/Uploads/@doctor.Image" style="width:150px;max-height:150px;" alt="Alternate Text" /></td>
                                            <td>@doctor.Name</td>
                                            <td>@doctor.Phone</td>
                                            <td>@doctor.Whatsapp</td>
                                            <td>@doctor.CreatedDate</td>
                                            <td>@doctor.HealthCategory.Name</td>
                                            <td>
                                                <a class="btn btn-success" asp-area="Admin" asp-controller="Doctor" asp-action="Update" asp-route-id="@doctor.Id">Update</a>
                                                <a class="btn btn-danger" asp-area="Admin" asp-controller="Doctor" asp-action="Delete" asp-route-id="@doctor.Id" onclick="return confirm('Are you sure?')">Delete</a>
                                            </td>
                                        </tr>
                        }
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>
